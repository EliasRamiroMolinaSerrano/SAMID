<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:id="@+id/activity_history_results"
    tools:context=".HistoryActivityResults">

    <include
        android:id="@+id/header"
        layout="@layout/go_back_header" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resultados"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="20sp"
        android:layout_marginTop="110dp"
        android:textColor="@color/Secondary_Darker"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:background="@drawable/shadow"
        app:cardBackgroundColor="@color/Primary_Light"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manuel"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="20sp"
        android:elevation="6dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/Secondary_Darker"
        app:layout_constraintTop_toTopOf="@id/card"
        app:layout_constraintStart_toStartOf="@id/card"/>

    <TextView
        android:id="@+id/date1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fecha"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="20sp"
        android:elevation="6dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/Secondary_Darker"
        app:layout_constraintTop_toTopOf="@id/card"
        app:layout_constraintEnd_toEndOf="@id/card"/>

    <ImageView
        android:id="@+id/spo21"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/spo2"
        android:src="@drawable/oxigen_ic"
        android:elevation="6dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/Secondary_Darker"
        app:layout_constraintBottom_toBottomOf="@id/card"
        app:layout_constraintStart_toStartOf="@id/card"/>

    <TextView
        android:id="@+id/spo2_value1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_90_spo2"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="20sp"
        android:elevation="6dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/Secondary_Darker"
        app:layout_constraintBottom_toBottomOf="@id/card"
        app:layout_constraintStart_toEndOf="@id/spo21"/>

    <ImageView
        android:id="@+id/heart1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/spo2"
        android:src="@drawable/heart_rate_ic"
        android:elevation="6dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/Secondary_Darker"
        app:layout_constraintBottom_toBottomOf="@id/card"
        app:layout_constraintStart_toEndOf="@id/spo2_value1"/>

    <TextView
        android:id="@+id/pulse_value1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_100_lpm"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="20sp"
        android:elevation="6dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/Secondary_Darker"
        app:layout_constraintBottom_toBottomOf="@id/card"
        app:layout_constraintStart_toEndOf="@id/heart1"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:background="@drawable/shadow"
        app:cardBackgroundColor="@color/Primary_Light"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manuel"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="20sp"
        android:elevation="6dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/Secondary_Darker"
        app:layout_constraintTop_toTopOf="@id/card2"
        app:layout_constraintStart_toStartOf="@id/card2"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fecha"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="20sp"
        android:elevation="6dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/Secondary_Darker"
        app:layout_constraintTop_toTopOf="@id/card2"
        app:layout_constraintEnd_toEndOf="@id/card2"/>

    <ImageView
        android:id="@+id/spo2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/spo2"
        android:src="@drawable/oxigen_ic"
        android:elevation="6dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/Secondary_Darker"
        app:layout_constraintBottom_toBottomOf="@id/card2"
        app:layout_constraintStart_toStartOf="@id/card2"/>

    <TextView
        android:id="@+id/spo2_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_90_spo2"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="20sp"
        android:elevation="6dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/Secondary_Darker"
        app:layout_constraintBottom_toBottomOf="@id/card2"
        app:layout_constraintStart_toEndOf="@id/spo2"/>

    <ImageView
        android:id="@+id/heart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/spo2"
        android:src="@drawable/heart_rate_ic"
        android:elevation="6dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/Secondary_Darker"
        app:layout_constraintBottom_toBottomOf="@id/card2"
        app:layout_constraintStart_toEndOf="@id/spo2_value"/>

    <TextView
        android:id="@+id/pulse_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_100_lpm"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="20sp"
        android:elevation="6dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/Secondary_Darker"
        app:layout_constraintBottom_toBottomOf="@id/card2"
        app:layout_constraintStart_toEndOf="@id/heart"/>

</androidx.constraintlayout.widget.ConstraintLayout>
