<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterPatient">

    <TextView
        android:id="@+id/texto1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="100dp"
        android:fontFamily="@font/montserrat"
        android:text="Registrar nuevo paciente"
        android:textColor="@color/Primary_Dark"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <TextView
        android:id="@+id/texto2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/montserrat"
        android:text="Por favor ingrese los siguientes datos"
        android:textColor="@color/GrayLow"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/texto1"
        app:layout_constraintTop_toTopOf="@+id/texto1"
        app:layout_constraintEnd_toEndOf="@+id/texto1"

        />




    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/textView1"
        android:singleLine="true"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texto2"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:elevation="7dp"
        android:hint="  Nombre"
        android:fontFamily="@font/montserrat"
        android:background="@drawable/rounded_edittext"
    />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/textView2"
        android:singleLine="true"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@id/textView1"
        app:layout_constraintEnd_toEndOf="@id/textView1"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:elevation="7dp"
        android:hint="  Lastname"
        android:fontFamily="@font/montserrat"
        android:background="@drawable/rounded_edittext"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/textView3"
        android:singleLine="true"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@id/textView2"
        app:layout_constraintEnd_toEndOf="@id/textView2"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:elevation="7dp"
        android:hint="  Address"
        android:fontFamily="@font/montserrat"
        android:background="@drawable/rounded_edittext"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/textView4"
        android:singleLine="true"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@id/textView3"
        app:layout_constraintEnd_toEndOf="@id/textView3"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:elevation="7dp"
        android:hint="  Age"
        android:fontFamily="@font/montserrat"
        android:background="@drawable/rounded_edittext"
        />

    <TextView
        android:id="@+id/texto3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat"
        android:text="Patient's condition"
        android:textColor="@color/GrayLow"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="60dp"
        app:layout_constraintTop_toBottomOf="@id/textView4"

        />

    <Spinner
        android:id="@+id/spinnerCondition"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat"
        android:layout_marginHorizontal="60dp"
        app:layout_constraintStart_toStartOf="@id/textView5"
        app:layout_constraintEnd_toEndOf="@id/textView5"
        app:layout_constraintTop_toBottomOf="@id/texto3"
        android:spinnerMode="dropdown"
        android:backgroundTint="@color/GrayLow"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/textView5"
        android:singleLine="true"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@id/textView1"
        app:layout_constraintEnd_toEndOf="@id/textView1"
        app:layout_constraintTop_toBottomOf="@id/spinnerCondition"
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:elevation="7dp"
        android:hint="  SAMID BRACELET ID"
        android:fontFamily="@font/montserrat"
        android:background="@drawable/rounded_edittext"
        />

    <Button
        android:id="@+id/RegisterBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/Primary_Normal"
        android:text="Registrar"
        android:textSize="17sp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/Secondary_Light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView5"
        />






</androidx.constraintlayout.widget.ConstraintLayout>