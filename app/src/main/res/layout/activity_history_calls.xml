<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_history_calls"
    android:background="@color/white"
    tools:context=".HistoryActivityCalls">

    <include
        android:id="@+id/header"
        layout="@layout/go_back_header" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resultados"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="20sp"
        android:layout_marginTop="110dp"
        android:textColor="@color/Secondary_Darker"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/shadow"
        app:cardBackgroundColor="@color/Primary_Light"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manuel"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="20sp"
        android:elevation="6dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/card"
        app:layout_constraintBottom_toBottomOf="@id/card"
        app:layout_constraintStart_toStartOf="@id/card"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hace 19 horas"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="18sp"
        android:elevation="6dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/card"
        app:layout_constraintBottom_toBottomOf="@id/card"
        app:layout_constraintStart_toEndOf="@id/name1"/>

    <ImageView
        android:id="@+id/phone_ic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/phone_ic"
        android:src="@drawable/phone_ic"
        android:elevation="6dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@id/card"
        app:layout_constraintEnd_toEndOf="@id/card"
        app:layout_constraintTop_toTopOf="@id/card"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/shadow"
        app:cardBackgroundColor="@color/Primary_Light"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manuel"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="20sp"
        android:elevation="6dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/card2"
        app:layout_constraintBottom_toBottomOf="@id/card2"
        app:layout_constraintStart_toStartOf="@id/card2"/>

    <TextView
        android:id="@+id/time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hace 3 semanas"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="18sp"
        android:elevation="6dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/card2"
        app:layout_constraintBottom_toBottomOf="@id/card2"
        app:layout_constraintStart_toEndOf="@id/name2"/>

    <ImageView
        android:id="@+id/phone_ic2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/phone_ic"
        android:src="@drawable/phone_ic"
        android:elevation="6dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@id/card2"
        app:layout_constraintEnd_toEndOf="@id/card2"
        app:layout_constraintTop_toTopOf="@id/card2"/>

</androidx.constraintlayout.widget.ConstraintLayout>