<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Capa para el borde inferior -->
    <item android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Color del borde inferior -->
            <size android:height="1dp"/>
        </shape>
    </item>

    <!-- Capa para el fondo con esquinas redondeadas -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Relleno transparente -->
            <corners android:radius="25dp"/>
            <stroke android:width="1dp" android:color="@color/white"/> <!-- Borde general -->
        </shape>
    </item>

</layer-list>
